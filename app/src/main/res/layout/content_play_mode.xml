<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/content_main"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorMenuBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1">
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".65">

        <com.alexbros.pidlubnyalexey.thesmartest.TextViewFont
            android:id="@+id/textViewPoints"
            android:gravity="center"
            android:text="POINTS: 20"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorMainFont"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.25"/>

        <ImageButton
            android:id="@+id/pauseGameButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:src="@drawable/pause_on"
            android:scaleType="fitXY"
            android:onClick="PauseGameButton"
            android:background="?android:selectableItemBackground"/>
        <com.alexbros.pidlubnyalexey.thesmartest.TextViewFont
            android:id="@+id/textViewTime"
            android:gravity="center"
            android:text="TIME: 20"
            android:textSize="20sp"
            android:textColor="@color/colorMainFont"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.25"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="@color/colorBtnGround">

        <com.alexbros.pidlubnyalexey.thesmartest.TextViewFont
            android:id="@+id/guessThePictureTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/guessTheCountry"
            android:textColor="@color/colorMainFont"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/contentImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/assassins_creed"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/firstBtnAnswer"
                style="@style/answerBtnStyle"/>
            <Button
                android:id="@+id/secondBtnAnswer"
                style="@style/answerBtnStyle"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/thirdBtnClick"
                style="@style/answerBtnStyle"/>
            <Button
                android:id="@+id/fourthBtnClick"
                style="@style/answerBtnStyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
