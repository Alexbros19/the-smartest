<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="30dp"></corners>
                    <solid android:color="@color/colorBtnStroke"></solid>
                </shape>
            </item>
            <item android:bottom="4dp" android:left="1dp" android:right="1dp">
                <shape>
                    <corners android:radius="30dp"></corners>
                    <gradient
                        android:angle="90"
                        android:startColor="@color/colorBtnGround"
                        android:endColor="@color/colorWhite">
                    </gradient>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="30dp"></corners>
                    <solid android:color="@color/colorBtnStroke"></solid>
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape>
                    <corners android:radius="30dp"></corners>
                    <gradient
                        android:angle="90"
                        android:startColor="@color/colorBtnGround"
                        android:endColor="@color/colorWhite">
                    </gradient>
                </shape>
            </item>
        </layer-list>
    </item>


</selector>